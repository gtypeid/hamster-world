<?xml version="1.0" encoding="UTF-8"?>
<!--
Logback Configuration for Grafana Stack

## Appenders:
1. CONSOLE: 콘솔 출력 (개발 환경)
2. LOKI: Loki로 로그 전송 (로그 수집)

## Log Pattern:
- Trace ID와 Span ID 포함 (분산 추적 연동)
- 서비스명 포함 (멀티 서비스 환경)
-->
<configuration>
    <!-- Spring Boot 기본 설정 포함 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 애플리케이션 이름 (Spring Property) -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="unknown"/>

    <!-- ===== Console Appender ===== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [${appName},%X{traceId:-},%X{spanId:-}] [%thread] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ===== Loki Appender ===== -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=${appName},host=${HOSTNAME},level=%level</pattern>
            </label>
            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [${appName},%X{traceId},%X{spanId}] [%thread] %logger{36} - %msg%n</pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
    </appender>

    <!-- ===== Root Logger ===== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>

    <!-- ===== Package별 로그 레벨 ===== -->
    <logger name="com.hamsterworld" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.kafka" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
</configuration>
